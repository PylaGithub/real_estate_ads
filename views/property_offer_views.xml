<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>

       <!-- Tree View -->
       <record id="estate_property_offer_tree_view" model="ir.ui.view">
           <field name="name">estate.property.offer.tree</field>
           <field name="model">estate.property.offer</field>
           <field name="arch" type="xml">
               <tree>
                   <field name="partner_id"/>
                   <field name="property_id"/>
                   <field name="price"/>
                   <field name="status"/>
                   <field name="deadline"/>
               </tree>
           </field>
       </record>

       <!-- Form View -->
       <record id="estate_property_offer_form_view" model="ir.ui.view">
           <field name="name">estate.property.offer.form</field>
           <field name="model">estate.property.offer</field>
           <field name="arch" type="xml">
               <form>
                   <header>
                       <button name="action_accept" type="object" string="Accept" class="btn btn-primary"/>
                       <button name="action_refuse" type="object" string="Refuse" class="btn btn-secondary"/>
                   </header>
                   <sheet>
                       <group>
                           <field name="partner_id"/>
                           <field name="property_id"/>
                           <field name="price"/>
                           <field name="status"/>
                           <field name="validity"/>
                           <field name="creation_date"/>
                           <field name="deadline"/>
                       </group>
                   </sheet>
               </form>
           </field>
       </record>

       <!-- Action -->
       <record id="estate_property_offer_action" model="ir.actions.act_window">
           <field name="name">Property Offers</field>
           <field name="res_model">estate.property.offer</field>
           <field name="view_mode">tree,form</field>
           <field name="view_id" ref="estate_property_offer_tree_view"/>
       </record>

   </data>
</odoo>
